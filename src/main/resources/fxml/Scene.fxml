<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.Es1_1.FXMLController">
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <TextField fx:id="txtNome" promptText="Nome" />
                        <TextField fx:id="txtPassword" promptText="Password" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#handleAccedi" text="Accedi" />
               </children>
            </HBox>
            <Label fx:id="txtMessaggio" text="Inserire nome e password" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
